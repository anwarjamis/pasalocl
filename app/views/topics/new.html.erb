<div class="container">
  <br>
  <% if current_user.admin %>
    <div class="btn-group mb-4" role="group" aria-label="Basic example">
      <%= link_to "← Volver a lista de unidades", topics_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="forms">
    <h1>Nueva unidad</h1>
  <%= simple_form_for @topic do |t| %>
    <%= t.input :title %>
    <%= t.input :description %>
    <%= t.association :course %>
    <%= t.button :submit %>
  <% end %>
  </div>
</div>
