<div class="container">
  <br>
  <% if !current_user.subscribed %>
    <%= render "shared/unsubscribed" %>
  <% end %>
  <br>
  <%= link_to "< Volver a lista de cursos", courses_path %> <br><br>
  <h1><%= @course.name %></h1>
  <p><%= @course.description %></p>
  <h3>Unidades</h3>

  <% @topics.each do |topic| %>
  <ul class="list-group">
    <%= link_to topic_path(topic), class: "text-decoration-none" do %>
      <li class='list-group-item d-flex justify-content-between align-items-center'>
        <%= topic.title %>
        <span class='badge badge-primary badge-pill'><%= @lessons.where(topic_id: topic).count %></span>
      </li>
    <% end %>
  </ul>
  <% end %>

  <br>
  <% if current_user.admin %>
    <%= link_to "Editar >", edit_course_path(@course) %> |
    <%= link_to "Eliminar >", course_path(@course), data: {
      turbo_method: :delete,
                        turbo_confirm: "Seguro que quieres borrar este curso?" } %>
  <% end %>
</div>
