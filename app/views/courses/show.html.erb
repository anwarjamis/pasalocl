<div class="container">
  <br>
  <% if !current_user.subscribed %>
    <%= render "shared/unsubscribed" %>
  <% end %>
  <br>
  <%= link_to "< Volver a lista de cursos", courses_path %> <br><br>
  <h1><%= @course.name %></h1>
  <p><%= @course.description %></p>
  <h3>Unidades</h3>

  <% @topics.each do |topic| %>
  <div class="accordion">
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <%= topic.title %>
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="cards">
            <% @lessons.where(topic_id: topic).each do |lesson| %>
            <div class="card-category">
              <% if current_user.subscribed || lesson.free %>
                <%= link_to lesson.title, lesson_path(lesson) %> <br>
              <% else  %>
                <%= lesson.title %>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <br>
  <% if current_user.admin %>
    <%= link_to "Editar >", edit_course_path(@course) %> |
    <%= link_to "Eliminar >", course_path(@course), data: {
      turbo_method: :delete,
                        turbo_confirm: "Seguro que quieres borrar este curso?" } %>
  <% end %>
</div>
