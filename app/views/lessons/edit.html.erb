<div class="container">
  <br>
  <% if current_user.admin %>
    <div class="btn-group mb-4" role="group" aria-label="Basic example">
      <%= link_to "← Volver a #{@lesson.title}", lesson_path(@lesson), class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="forms">
    <h1>Editando <%= @lesson.title %></h1>
  <%= simple_form_for @lesson do |l| %>
    <%= l.input :title %>
    <%= l.input :time %>
    <%= l.input :asset, as: :file %>
    <%= l.association :topic %>
    <%= l.input :description %>
    <%= l.input :free %>
    <%= l.button :submit %>
  <% end %>
  </div>
</div>
