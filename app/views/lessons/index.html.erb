<div class="container">
  <br>
  <% if current_user.admin %>
    <div class="btn-group mb-4" role="group" aria-label="Basic example">
      <%= link_to "← Volver al admin", admin_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <h1>Todas las clases</h1>
  <ol>
    <% @lessons.each do |lesson| %>
      <li><%= link_to lesson.title, lesson_path(lesson) %></li>
    <% end %>
  </ol>
  <% if current_user.admin %>
    <div class="btn-group mb-4" role="group" aria-label="Basic example">
      <%= link_to "Agregar →", new_lesson_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
