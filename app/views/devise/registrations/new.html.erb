<div class="container my-4" style="width: 75%">
  <div class="forms"><h2>Crear cuenta</h2><br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :name,
                    label: "Nombre",
                    required: true,
                    autofocus: true %>
        </div>
        <div class="col-md-6">
          <%= f.input :last_name,
                    label: "Apellido",
                    required: true,
                    autofocus: true %>
        </div>
      </div>
      <%= f.input :phone_number,
                  label: "Teléfono (+56) ",
                  placeholder: "9795788XX",
                  required: true,
                  autofocus: true %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.association :university,
                            label: "Universidad" %>
        </div>
        <div class="col-md-6">
          <%= f.association :career,
                            label: "Área de Estudios" %>
        </div>
      </div>
        <%= f.input :password,
                    required: true,
                    label: "Contraseña",
                    hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmar contraseña",
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Crear cuenta", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
