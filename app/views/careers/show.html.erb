<div class="container">
  <br>
  <% if current_user.admin %>
    <%= link_to "< Volver a lista de carreras", careers_path %> <br><br>
  <% end %>
  <h1><%= @career.name %></h1>
  <% if current_user.admin %>
    <%= link_to "Editar >", edit_career_path(@career) %> |
    <%= link_to "Eliminar >", career_path(@career), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this career?" } %>
  <% end %>
</div>
