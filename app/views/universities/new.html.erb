<div class="container my-4">
  <% if current_user.admin %>
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to "← Volver a lista de universidades", universities_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="forms">
    <h1>Nueva universidad</h1>
  <%= simple_form_for @university do |u| %>
    <%= u.input :name %>
    <%= u.input :initials %>
    <%= u.button :submit %>
  <% end %>
  </div>
</div>
